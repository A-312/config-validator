{
  "opts": {
    "destination": "./gh-pages/",
    "tutorials": "./docs/",
    "template": "node_modules/docdash"
  },
  "plugins": ["plugins/markdown"],
  "markdown": {
    "excludeTags": ["author"]
  },
  "source": {
    "include": [
      "./packages/blueconfig/lib/",
      "./packages/blueconfig/lib/format/",
      "./packages/blueconfig/lib/model/",
      "./packages/blueconfig/lib/performer/"
    ]
  },
  "docdash": {
    "sectionOrder": [
      "Tutorials",
      "Classes",
      "Modules",
      "Externals",
      "Events",
      "Namespaces",
      "Mixins",
      "Interfaces"
    ],
    "scripts": [
      "custom.css"
    ]
  },
  "templates": {
    "default": {
      "staticFiles": {
        "include": [
          "./docs/custom.css"
        ]
      }
    }
  }
}